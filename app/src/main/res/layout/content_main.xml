<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.school.luke.mvc_horoscope.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText android:id="@+id/edit_message"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ImageButton"
        android:layout_gravity="center"
        android:src="@drawable/pisces"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/edit_message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="SwitchToPisces"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:onClick="sendMessage"
        android:layout_gravity="left|top"
        android:id="@+id/button"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_alignBottom="@+id/edit_message"
        android:layout_toRightOf="@+id/edit_message"
        android:layout_toEndOf="@+id/edit_message" />

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click a starsign for you horoscope"
        android:id="@+id/textView"
        android:layout_below="@+id/ImageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="153dp" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton"
        android:layout_gravity="center"
        android:src="@drawable/aquarius"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:onClick="SwitchToAquarius"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/ImageButton"
        android:layout_toEndOf="@+id/ImageButton" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton2"
        android:layout_gravity="center"
        android:src="@drawable/aries"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:onClick="SwitchToAries"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton3"
        android:layout_gravity="center"
        android:src="@drawable/cancer"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:onClick="SwitchToCancer"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton4"
        android:layout_gravity="center"
        android:src="@drawable/virgo"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:onClick="SwitchToVirgo"
        android:layout_below="@+id/ImageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton5"
        android:layout_gravity="center"
        android:src="@drawable/gemini"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:onClick="SwitchToGemini"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_alignRight="@+id/imageButton3"
        android:layout_alignEnd="@+id/imageButton3" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton6"
        android:layout_gravity="center"
        android:src="@drawable/scorpion"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:onClick="SwitchToScorpion"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton7"
        android:layout_gravity="center"
        android:src="@drawable/sagittarius"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:onClick="SwitchToSagittarius"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_toLeftOf="@+id/imageButton6"
        android:layout_toStartOf="@+id/imageButton6" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton8"
        android:layout_gravity="center"
        android:src="@drawable/taurus"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:onClick="SwitchToTaurus"
        android:layout_below="@+id/imageButton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton9"
        android:layout_gravity="center"
        android:src="@drawable/leo"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:onClick="SwitchToLeo"
        android:layout_below="@+id/imageButton4"
        android:layout_toLeftOf="@+id/imageButton6"
        android:layout_toStartOf="@+id/imageButton6" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton10"
        android:layout_gravity="center"
        android:src="@drawable/libra"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:onClick="SwitchToLibra"
        android:layout_below="@+id/imageButton4"
        android:layout_toLeftOf="@+id/imageButton5"
        android:layout_toStartOf="@+id/imageButton5" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/image"
        android:layout_gravity="center"
        android:src="@drawable/capricorn"
        android:layout_weight="0.34"
        android:scaleType="fitCenter"
        android:onClick="SwitchToCapricorn"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/imageButton5"
        android:layout_alignEnd="@+id/imageButton5" />


</RelativeLayout>
